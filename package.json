{
  "name": "use-gravatar",
  "version": "1.0.0",
  "repository": "github:elisherer/use-gravatar",
  "bugs": "https://github.com/elisherer/use-gravatar/issues",
  "author": "Eli Sherer <eli.sherer@gmail.com> (https://www.sherer.co.il)",
  "license": "MIT",
  "description": "React hook (memoized) for getting gravatar's url based on email address",
  "keywords": [
    "react",
    "react hook",
    "gravatar hook",
    "react gravatar hook",
    "react hook gravatar"
  ],
  "main": "dist/commonjs/index.js",
  "module": "dist/es2015/index.js",
  "scripts": {
    "build.commonjs": "tsc",
    "build.es2015": "tsc --outDir dist/es2015 --module es2015 --moduleResolution node",
    "build": "rimraf ./dist && npm run build.commonjs && npm run build.es2015"
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "module"
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    }
  },
  "devDependencies": {
    "@types/react": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "prettier": "^1.17.1",
    "react": "^17.0.1",
    "rimraf": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
